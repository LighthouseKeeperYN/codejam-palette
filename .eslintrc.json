{
  "extends": ["airbnb-base"],
  "rules": {
    "no-param-reassign": 0,
    "import/extensions": 0,
    "no-multi-assign": 0,
    "no-plusplus": 0,
    "no-use-before-define": 0,
    "no-bitwise": 0,
    "no-constant-condition": ["error", { "checkLoops": false }],
    "prefer-destructuring": 0

  },
  "env": {
    "browser": true,
    "node": true,
    "jasmine": true
  },
  "globals": {
    "test": false
  }
}